        "url": {
          "raw": "http://localhost:3000/eligibility/check",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["eligibility", "check"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"patientId\": \"P100\",\n  \"age\": 30,\n  \"icu_admit_time\": \"2025-08-25T15:00:00Z\",\n  \"now\": \"2025-08-26T10:00:00Z\",\n  \"consent\": true,\n  \"renal_failure\": false\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Should be Eligible\", function () {",
              "  pm.expect(pm.response.json().outcome).to.eql(\"Eligible\");",
              "  pm.expect(pm.response.json().reasonsFailed).to.eql([]);",
              "});"
            ]
          }
        }
      ]
